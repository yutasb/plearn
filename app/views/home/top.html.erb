<!DOCTYPE html>
<html>
  <head>
    <title>Plearn</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <%= link_to 'Plearn', root_url,  class:"navbar-brand" %>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
            </ul>
            <% if current_user %>
                <%= "ようこそ、#{current_user.name}　さん" %>
                <%= link_to 'マイページ', activities_path, class:'nav-link'%>
                <%= link_to 'ログアウト', logout_path, class:'nav-link', method: :delete%>
            <% else%>
                <%= link_to '新規登録', users_new_path, class:'nav-link'%>
                <%= link_to 'ログイン', login_path, class:'nav-link'%>
            <% end%>
        </div>
    </nav>
    <div class='notifications'>
      <% flash.each do |key,value|%>
        <%= content_tag(:div,value, class:key)%>
      <%end%>
    </div>
    <%= image_tag 'head.png' %>
    <div>
        <h1 class='topTitle'>Plearn</h1>
        <h5 class='subTitle'>学びの計画を立てよう</h5>
    </div>
      
        
    
  </body>
</html>
